#!/usr/bin/env php
<?php declare(strict_types=1);
// Copyright (C) 2015-2025 Mark Constable <mc@netserva.org> (MIT License)
// CLI wrapper for VmailOps::show - same code as web UI

if (php_sapi_name() !== 'cli') {
    die("CLI only\n");
}

require __DIR__ . '/../vendor/autoload.php';

use SPE\HCP\Lib\VmailOps;

if ($argc < 2) {
    fwrite(STDERR, "Usage: shvmail <email> [host]\n");
    exit(1);
}

$email = $argv[1];
$host = $argv[2] ?? null;

if ($host) {
    putenv("TARGET_HOST={$host}");
}

$result = VmailOps::show($email);

if (!$result['success']) {
    fwrite(STDERR, "Error: {$result['error']}\n");
    exit(1);
}

echo "Email: {$result['email']}\n";
echo "Home: {$result['home']}\n";
echo "UID: {$result['uid']}\n";
echo "GID: {$result['gid']}\n";
echo "Size: {$result['size']}\n";
echo "Messages: {$result['messages']}\n";
exit(0);
