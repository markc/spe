#!/usr/bin/env php
<?php declare(strict_types=1);
// Copyright (C) 2015-2025 Mark Constable <mc@netserva.org> (MIT License)
// CLI wrapper for VhostOps::manage - same code as web UI

if (php_sapi_name() !== 'cli') {
    die("CLI only\n");
}

require __DIR__ . '/../vendor/autoload.php';

use SPE\HCP\Lib\VhostOps;

if ($argc < 3) {
    fwrite(STDERR, "Usage: chvhost <domain> <action> [host]\n");
    fwrite(STDERR, "\nActions:\n");
    fwrite(STDERR, "  enable   - Enable nginx site\n");
    fwrite(STDERR, "  disable  - Disable nginx site\n");
    fwrite(STDERR, "  restart  - Reload nginx and php-fpm\n");
    exit(1);
}

$domain = $argv[1];
$action = $argv[2];
$host = $argv[3] ?? null;

if ($host) {
    putenv("TARGET_HOST={$host}");
}

$result = VhostOps::manage($domain, $action);

if (!$result['success']) {
    fwrite(STDERR, "Error: {$result['error']}\n");
    exit(1);
}

echo ucfirst($result['action']) . ": {$result['domain']}\n";
if (isset($result['php'])) {
    echo "PHP: {$result['php']}\n";
}
exit(0);
