#!/usr/bin/env php
<?php declare(strict_types=1);
// Copyright (C) 2015-2025 Mark Constable <mc@netserva.org> (MIT License)
// CLI wrapper for VhostOps::add - same code as web UI

if (php_sapi_name() !== 'cli') {
    die("CLI only\n");
}

require __DIR__ . '/../vendor/autoload.php';

use SPE\HCP\Lib\VhostOps;

if ($argc < 2) {
    fwrite(STDERR, "Usage: addvhost <domain> [uname] [host]\n");
    exit(1);
}

$domain = $argv[1];
$uname = $argv[2] ?? null;
$host = $argv[3] ?? null;

if ($host) {
    putenv("TARGET_HOST={$host}");
}

$result = VhostOps::add($domain, $uname);

if (!$result['success']) {
    fwrite(STDERR, "Error: {$result['error']}\n");
    exit(1);
}

echo "Created vhost: {$result['domain']}\n";
echo "uid={$result['uid']} gid={$result['gid']}\n";
echo "Home: {$result['home']}\n";
exit(0);
