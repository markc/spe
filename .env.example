# SPE Environment Configuration
# Copy to .env and customize for your environment

# Application
APP_ENV=development
APP_DEBUG=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database type: sqlite (default) or mariadb
# SQLite: Zero-config, file-based, auto-creates on first run
# MariaDB: Requires server setup (see below)
DB_TYPE=sqlite

# -----------------------------------------------------------------------------
# SQLite Settings (used when DB_TYPE=sqlite)
# -----------------------------------------------------------------------------
SQLITE_DIR=app/sqlite

# -----------------------------------------------------------------------------
# MariaDB Settings (used when DB_TYPE=mariadb)
# -----------------------------------------------------------------------------
# To use MariaDB, set DB_TYPE=mariadb and configure these settings.
#
# Quick Setup:
#   1. Install MariaDB:
#      sudo pacman -S mariadb   # Arch/CachyOS
#      sudo apt install mariadb-server   # Debian/Ubuntu
#
#   2. Start the service:
#      sudo systemctl start mariadb
#
#   3. Create databases and user:
#      mariadb -u root << 'SQL'
#        CREATE DATABASE IF NOT EXISTS spe_blog CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
#        CREATE DATABASE IF NOT EXISTS spe_users CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
#        CREATE USER IF NOT EXISTS 'spe'@'localhost' IDENTIFIED BY 'spe123';
#        GRANT ALL PRIVILEGES ON spe_blog.* TO 'spe'@'localhost';
#        GRANT ALL PRIVILEGES ON spe_users.* TO 'spe'@'localhost';
#        FLUSH PRIVILEGES;
#      SQL
#
#   4. Initialize schemas:
#      mariadb -u root spe_blog < app/schema/blog.mariadb.sql
#      mariadb -u root spe_users < app/schema/users.mariadb.sql
#
DB_HOST=localhost
DB_PORT=3306
DB_USER=spe
DB_PASS=spe123
DB_blog_NAME=spe_blog
DB_users_NAME=spe_users

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# YouTube API (Chapter 10)
GOOGLE_CONFIG_DIR=~/.config/google

# Email
MAIL_FROM=noreply@localhost
